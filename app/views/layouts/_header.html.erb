<header class="navbar navbar-default navbar-static-top" role="banner">
  <div class="container menu-container">
    <div class="navbar-header clearfix">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="<%= root_path %>" alt="raisy"><%= image_tag "raisyLOGO.png", class: "logo" %></a>
    </div>
    <nav class="collapse navbar-collapse navbar-responsive-collapse" role="navigation">
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
		        <% if @campaign && !@campaign.id.nil? && @campaign.organizer_id!=current_user.id && !current_user.is_sales? && !current_user.is_crs? && !current_user.is_seller?(@campaign) && !current_user.admin? && !@campaign.expired? && @campaign.active %>
		            <li>
		              <%= link_to "Join the fundraising team", signup_seller_path(@campaign), class: "join-fundraising-link" %>
					  <%= link_to "Not Your Fundraiser? Click Here", "/search", class: "join-other-fundraising-link", style: "display:none;" %>
		            </li>
		        <% end %>
						
						<% is_chairperson = current_user.is_chairperson? %>
				
            <% if is_chairperson %>
                <li><%= link_to "Chairperson Toolbox", dashboard_campaigns_path %></li>
            <% end %>
						
            <% if current_user.is_crs? %>
                <li><%= link_to "Fundraisers", dashboard_campaigns_path + "?cp=no" %></li>
            <% end %>
						
            <% if current_user.is_sales? || current_user.is_crs? %>
                <li><%= link_to "Group Storefronts", dashboard_storefronts_path %></li>
            <% end %>
		
            <% if @campaign && !@campaign.id.nil? && @campaign.organizer_id==current_user.id %>
                <li><%= link_to "Edit This Fundraiser", dashboard_campaign_details_path(@campaign) %></li>
            <% end %>
				
						<% if current_user.is_sales? || current_user.is_crs? %>
							<li class="visible-xs"><%= link_to "Reports", sales_report_path %></li>
						<% end %>
				
	            <li class="dropdown">
	              <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">My Account <b class="caret"></b></a>
	              <ul class="dropdown-menu">
	                <% if current_user.any_seller? %>
	                    <li><%= link_to current_user.profile.try(:first_name) + "'s Dashboard", seller_dashboard_path %></li>
	                <% end %>
               
				   	<% if !current_user.is_sales? && !current_user.is_crs? %>
						<li><%= link_to "Create New Fundraiser", new_campaign_path %></li>
					<% end %>
				
					<% if is_chairperson %>
	                    <li><%= link_to "Edit Fundraiser Details", dashboard_campaigns_path %></li>
	                <% end %>
				
					<% if current_user.is_sales? %>
						<li><%= link_to "My Accounts", dashboard_campaigns_path + "?cp=no" %></li>
					<% end %>
				
	                <li>
	                  <%= link_to "My Profile", settings_profile_path %>
	                </li>
				
	                <% if current_user.admin? %>
	                    <li class="divider"></li>
	                    <li>
	                      <%= link_to "Admin", admin_root_path %>
	                    </li>
	                <% end %>
	                <li class="divider"></li>
	                <li>
	                  <%= link_to "Log out", destroy_user_session_path, method: :delete %>
	                </li>
	              </ul>
	            </li>
            </ul>
            <p class="navbar-right navbar-text hidden-xs hidden-sm">Welcome back, <%= current_user.profile.try(:first_name) %></p>
			
			<% if current_user.is_sales? || current_user.is_crs? %>
				<p class="navbar-right navbar-text hidden-xs"><%= link_to "Reports", sales_report_path %></p>
			<% end %>
        <% else %>
            <li class="home-menu">
              <%= link_to "Start a Fundraiser", '#startfund', class: 'homemenu' %>
            </li>
            <li class="home-menu">
              <%= link_to "Join a Fundraiser", '/search' %>
            </li>
            <li class="home-menu">
              <%= link_to "How it works", '#howitworks', class: 'homemenu' %>
            </li>
            <% if @campaign && !@campaign.id.nil? && !@campaign.expired? && @campaign.active %>
                <li>
                  <%= link_to "Join the fundraising team", signup_seller_path(@campaign),class: "join-fundraising-link" %>
				  <%= link_to "Not Your Fundraiser? Click Here", "/search", class: "join-other-fundraising-link", style: "display:none;" %>
                </li>
            <% end %>
            <li>
              <%= link_to 'Login', '#user_modal', class: 'btn btn-primary user-modal-launch', data: {action: 'signin'}, style: "display:inline-block; margin-top: 5px; margin-left: 10px; padding: 3px 20px; color: white" %>
            </li>
            </ul>
        <% end %>
        </nav>
  </div>
</header>
