<div id="organizations" style="padding: 30px 0">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <h3>供应商</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-hover" style="width:">
                        <thead>
                        <tr>
                            <th>名称</th>
                            <th>Email</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <% @vendors.each do |vendor| %>
                        <tr>
                            <td><%= link_to vendor.name, edit_admin_vendor_path(vendor) %></td>
                            <td><%= vendor.email %></td>
                            <td><%= link_to "删除", admin_vendor_path(vendor), method: :delete, data: { confirm:
                                "您确定要删除该供应商吗?" } %>
                            </td>
                        </tr>
                        <% end %>
                        </tbody>
                    </table>
                </div>

                <!-- pager here -->
            </div>
        </div>

        <%= link_to '添加供应商', new_admin_vendor_path, class: 'btn btn-primary' %>


        <%= link_to '物流数据导入', new_admin_express_upload_path, class: 'btn btn-primary' %>
    </div>
</div>
