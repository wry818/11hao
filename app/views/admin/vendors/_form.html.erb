<%= form_for([:admin, @vendor], html: { id: "vendor_form", class: "vendor_form" }) do |f| %>
	<fieldset>
		<div class="row">
			<div class="col-md-12">
                <div class="well">
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="vendor_name">名称</label>
                            <%= f.text_field :name, class: 'form-control' %>
                        </div>
                    </div>
                </div>
				
                <div class="well">
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="vendor_email">Email</label>
                            <%= f.text_field :email, class: 'form-control' %>
                        </div>
                    </div>
                </div>
			</div>
		</div>
		
		<div>
	        <button class="btn btn-primary btn-lg" type="submit">
	            <span class="text">保存</span>
	        </button>&nbsp;&nbsp;&nbsp;
	        <%= link_to "返回", admin_vendors_path, class: "btn btn-primary btn-lg" %>
		</div>
    </fieldset>
<% end %>