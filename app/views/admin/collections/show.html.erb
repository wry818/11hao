<div id="collections">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <h3>组合: <%= @collection.name %></h3>
            </div>
        </div>
        <%= link_to "编辑", edit_admin_collection_path(@collection), class: 'btn btn-primary' %>


        <h4>分类</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>名称</th>
                                <th>图片</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @collection.categories.order(:id).each do |category| %>
                            <tr>
                                <td><%= link_to category.name, edit_admin_collection_category_path(@collection, category) %></td>
                                <td>
                                    <%= cl_image_tag category.picture, width: 50, height: 50, crop: :limit, class: 'img-thumbnail' if category.picture.present? %>
                                </td>
                                <td>
                                    <%= link_to '删除', admin_collection_category_path(@collection, category), method: :delete, data: { confirm: '您确定要删除该分类吗?' } %>
                                </td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <%= link_to '添加分类', new_admin_collection_category_path(@collection), class: 'btn btn-primary' %>

    </div>
</div>
