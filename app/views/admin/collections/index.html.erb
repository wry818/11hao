<div id="collections" style="padding: 30px 0">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <h3>组合</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>名称</th>
                                <th>启用</th>
                                <th>排序编号</th>
                                <th>图片</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @collections.order(:id).each do |collection| %>
                            <tr>
                                <td>
									<% if collection.id>0 %>
                                    	<%= link_to collection.name, admin_collection_path(collection) %>
									<% else %>
										<%= collection.name %>
									<% end %>
								</td>
                                <td>
                                    <% if collection.active %>
                                    <span class="glyphicon glyphicon-ok"></span>
                                    <% end %>
                                </td>
                                <td><%= collection.sort_order %></td>
                                <td>
                                    <%= cl_image_tag collection.picture, width: 50, height: 50, crop: :limit, class: 'img-thumbnail' if collection.picture.present? %>
                                </td>
                                <td>
									<% if collection.id>0 %>
	                                    <%= link_to '删除', admin_collection_path(collection), method: :delete, data: { confirm: '您确定要删除该组合吗?' } %>
									<% end %>
                                </td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <%= link_to '添加组合', new_admin_collection_path, class: 'btn btn-primary' %>

    </div>
</div>
