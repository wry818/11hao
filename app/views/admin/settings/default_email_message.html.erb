<div id="default_email_message" style="padding: 30px 0">
    <div class="container">
		 <div class="row">
			 <div class="col-md-8">
			 	<h3>默认销售邮件</h3>
			</div>
		 </div>
		 
		 <div class="row">&nbsp;</div>
		 
		 <form id="default_email_message_form" action="/admin/save_default_email_message" method="post" class="default_email_message_form form-horizontal">
			 <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
			 
			 <div class="row">
				 <div class="col-md-8">
					<div style="margin-bottom:10px;">
					 	<textarea id="default_email_message" name="default_email_message" class="tinymce">
						 	<%= @admin_setting.default_email_message || "" if @admin_setting %>
					 	</textarea>
					</div>
					
					<div style="border:1px solid #ccc; font-size:16px; margin-bottom:10px; padding:10px 0px; text-align:center;">
						此处可添加自定义内容
					</div>
					
					<div style="margin-bottom:10px;">
					 	<textarea id="default_email_message_two" name="default_email_message_two" class="tinymce">
						 	<%= @admin_setting.default_email_message_two || "" if @admin_setting %>
					 	</textarea>
					</div>
				 </div>
				 <div class="col-md-4">
				 	<p>预定义变量:</p>
					
					<table>
						<tr>
							<td><label>{{fundraiser.chairperson}}</label> - 组织者姓名</td>
						</tr>
						<tr>
							<td><label>{{fundraiser.url}}</label> - 筹款首页地址</td>
						</tr>
						<tr>
							<td><label>{{fundraiser.title}}</label> - 筹款标题</td>
						</tr>
						<tr>
							<td><label>{{fundraiser.tagline}}</label> - 宣传标语</td>
						</tr>
						<tr>
							<td><label>{{fundraiser.goal}}</label> - 筹款目标</td>
						</tr>
						<tr>
							<td><label>{{organization.name}}</label> - 组织名称</td>
						</tr>
						<tr>
							<td><label>{{collection.name}}</label> - 组合名称</td>
						</tr>
						<tr>
							<td><label>{{seller.fullname}}</label> - 销售姓名</td>
						</tr>
						<tr>
							<td><label>{{seller.url}}</label> - 销售首页地址</td>
						</tr>
						<tr>
							<td><label>{{contact.greeting}}</label> - 联系人问候语</td>
						</tr>
					</table>
				 </div>
			 </div>
			 
			 <div class="row">&nbsp;</div>
		 
			 <div class="row">
				 <div class="col-md-8" style="text-align:center;">
					 <input type="submit" class="btn btn-primary btn-lg" value="保存" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					 <%= link_to '返回', admin_settings_path, class: 'btn btn-primary btn-lg' %>
				 </div>
			 </div>
		 </form>
	</div>
</div>