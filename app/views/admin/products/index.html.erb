<div id="products" style="padding: 30px 0">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <h3>Products</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Collection</th>
								<th>Featured</th>
                                <th>Image</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @products.order(:id).each do |product| %>
                            <tr>
                                <td><%= link_to product.name, edit_admin_product_path(product) %></td>
                                <td>
                                    <% product.collections.each do |collection| %>
                                        <%= collection.name %><br/>
                                    <% end %>
                                </td>
								<td>
                                    <% if product.is_featured %>
                                    <span class="glyphicon glyphicon-ok"></span>
                                    <% end %>
								</td>
                                <td>
                                    <%= cl_image_tag product.picture, width: 50, height: 50, crop: :limit, class: 'img-thumbnail' if product.picture.present? %>
                                </td>
                                <td>
                                    <%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure that you want to destroy this product?' } %>
                                </td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <%= link_to 'Create new product', new_admin_product_path, class: 'btn btn-primary' %>

    </div>
</div>
