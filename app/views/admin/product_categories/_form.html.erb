<%= form_for([:admin, @product_category], html: { class: "product_category_form" }) do |f| %>
    <fieldset>
      <div class="row">
        <div class="col-md-12">

          <div class="well">
            <label for="product_category_name" class="control-label">类别名称</label>
            <%= f.text_field :name, class: 'form-control', placeholder: '类别名称' %>
          </div>

          <div class="well">
            <div class="row">
              <div class="col-md-12">
                <div class="checkbox">
                  <label for="product_category_active"><%= f.check_box :active %> 是否启用</label>
                </div>
              </div>
            </div>
          </div>

          <div class="well">
            <label for="product_category_sort_mark" class="control-label">排序编号</label>
            <%= f.text_field :sort_mark, class: 'form-control' %>
          </div>

        </div>
      </div>

      <button id="collection-form-submit" class="btn btn-primary" name="commit" type="submit">
        <span class="text">保存 </span> <span class="loader" style="display:none"></span>
      </button>
      <%= link_to "返回", admin_product_categories_path, class: 'btn btn-primary' %>
    </fieldset>
<% end %>
