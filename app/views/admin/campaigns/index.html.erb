<div id="campaigns" style="padding: 30px 0">
    <div class="container">

        <div class="row">
            <div class="col-md-8">
                <h3>Fundraisers</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Title</th>
                                <th>Collection</th>
                                <th>Organizer</th>
								<th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @campaigns.order(:id).each do |campaign| %>
                            <tr>
                                <td><%= campaign.created_at.strftime('%b %-d, %Y') %></td>
                                <td><%= link_to campaign.title, short_campaign_path(campaign) %></td>
                                <td><%= campaign.collection.name if campaign.collection %></td>
                                <td><%= campaign.organizer.profile.fullname if campaign.organizer %></td>
                                <td>
									<%= link_to 'Edit', edit_admin_campaign_path(campaign) %>
                                </td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


        <%= link_to 'Create new fundraiser', new_admin_campaign_path, class: 'btn btn-primary' %>

    </div>
</div>
