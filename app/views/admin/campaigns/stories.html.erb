<div id="campaign_stories" style="padding: 30px 0">
    <div class="container">
		 <div class="row">
			 <h3>默认筹款故事</h3>
		 </div>
		 
		 <div class="row">&nbsp;</div>

        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>日期</th>
                                <th>标题</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @stories.each do |story| %>
                            <tr>
                                <td><%= story.updated_at??story.updated_at.strftime('%b %-d, %Y'):story.created_at.strftime('%b %-d, %Y') %></td>
								<td><%= link_to story.title, "campaign_story/" + story.id.to_s %></td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
		<div>
			<%= link_to '返回', admin_settings_path, class: 'btn btn-primary btn-lg' %>
		</div>
	</div>
</div>