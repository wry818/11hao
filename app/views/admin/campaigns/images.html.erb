<div id="campaign_images" style="padding: 30px 0">
    <div class="container">
		 <div class="row">
			 <h3>默认筹款封面</h3>
		 </div>
		 
		 <div class="row">&nbsp;</div>
		 
		 <div class="row">
			 <div class="col-md-2">
			 	<%= link_to '添加筹款封面', "campaign_image", class: 'btn btn-primary' %>
		 	</div>
		 </div>
		 
		 <div class="row">&nbsp;</div>
		
	 <% @images.each_with_index do |image, index| %>
	 	
		<% if index % 2 == 0 %>
			<div class="row">
		<% end %>
	 	
	 	<div class="col-md-6 campaign-image-div">
			<div style="border:1px solid #eee;">
		 		<div style="text-align:center;">
					<%= cl_image_tag image.image_id, 
					transformation: [{
						width: image.crop_width, 
						height: image.crop_height,
						x: image.crop_x,
						y: image.crop_y,
						crop: :crop
					}], style: "width:100%; max-height:600px;" if image.is_cropped %>
					
					<%= cl_image_tag image.image_id, 
						style: "width:100%; max-height:600px;" if !image.is_cropped %>
		 		</div>
				<div>&nbsp;</div>
				<div style="text-align:center;">
					<button class="btn btn-primary delete-campaign-image" data-pk="<%=image.id%>">删除</button>
				</div>
				<div>&nbsp;</div>
			</div>
			<div>&nbsp;</div>
	 	</div>
		
		<% if index % 2 > 0 || index == @images.count - 1 %>
			</div>
		<% end %>
		
	 <% end %>
	 
		 <div class="row">&nbsp;</div>
		 <div class="row">&nbsp;</div>
		 
		 <div>
			<%= link_to '返回', admin_settings_path, class: 'btn btn-primary btn-lg' %>
		</div>
	</div>
</div>