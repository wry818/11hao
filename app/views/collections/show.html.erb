                        <div class="col-md-3">
                            <!--<%= image_tag "anne.jpg", class: 'img-responsive img-circle', style: 'height:100px' %>-->
                        </div>
                        <div class="col-md-9">
                             <!--<h4>"Raisy helped us to raise more money in less time without all of the usual hassles.  We can't wait to do another fundraiser with Raisy!"</h4>-->
                        </div>
                         <!--<div style="font-style:italic;color:gray;margin-left:50px;margin-top:120px;">Anne Dizon, Teacher at Saint Clement in Hayward, California</div>-->
                    </div>
                    <div class="col-md-5 landing-page-fundraiser-button" style="margin-top:20px;">
                        <div class="online-orders">
                            <p>
                                <%= link_to 'Start Your Fundraiser', new_campaign_path(collection: @collection.slug), class: 'btn btn-primary btn-block' %>
