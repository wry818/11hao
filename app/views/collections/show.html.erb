                            <%= raw(@collection.description) %>
                            <%= raw(@collection.landing_page_html) %>
                        </div>
                    </div>
                </div>
                <div class="row more-information">
                    <div class="col-md-7">
                        <!-- form role="form" class="invite-form">
                            <div>
                                <h4>Want more information?  No problem!</h4>
