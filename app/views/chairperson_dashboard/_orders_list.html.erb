<table style="width:100%">
	<tr><td>
		<table class="table table-hover table-bordered">
		    <thead>
		        <tr>
					<th>订单编号</th>
		            <th>订单时间</th>
		            <th>用户昵称</th>
		            <th>产品名称</th>
		            <th>购买数量</th>
		            <th>支付金额</th>
		            <th>物流状态</th>
		        </tr>
		    </thead>
		    <tbody>
		        <% @campaign.orders.completed.order(:id=>:desc).each do |order| %>
		        <tr>
					<td>
						<% if order.donation_only? %>
							<%= order.id %>
						<% else %>
							<a onclick="Raisy.chairperson_dashboard.show_order_detail(this);" data-url="<%= dashboard_campaign_order_path(@campaign,order.id) %>" style="cursor:pointer;">
								<%= order.id %></a>
						<% end %>
					</td>
		            <td style="white-space:nowrap;">
						<%= order.created_at.strftime('%b %-d, %Y') %>
					</td>
		            <td><%= order.fullname %></td>
		            <td><%= order.email %></td>
		            <td>
		                <ul style="list-style-type:none;padding:0px;margin:0px;">
		                <% order.items.each do |item| %>
		                <li style="margin-bottom:5px;">
							<%= item.quantity %>-<%= item.product.name if item.product %>
				            <% item.options.each do |option| %>
							<% if option.value.present? %>
				                <p style="margin:0;"><i><%= "#{option.option_group.name}: #{option.value}" %></i></p>
							<% end %>
				            <% end %>
						</li>
		                <% end %>
		                </ul>
		            </td>
		            <td>$<%= long_price(order.grandtotal.to_f/100) %></td>
		            <td><%= order.seller.user_profile.fullname if order.seller %></td>
		        </tr>
		        <% end %>
		    </tbody>
		</table>
	</td></tr>
</table>