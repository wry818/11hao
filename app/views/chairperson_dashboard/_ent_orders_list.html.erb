<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Status</th>
            <th>Date</th>
            <th>Purchaser</th>
            <th>Email</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Seller</th>
        </tr>
    </thead>
    <tbody>
        <% @campaign.ent_orders.each do |order| %>
        <tr>
            <td><%= order.entertainment_order_id %></td>
            <td><%= order.status %></td>
            <td><%= order.order_date.strftime('%b %-d, %Y') %></td>
            <td><%= order.purchaser_fullname %></td>
            <td><%= order.purchaser_email %></td>
            <td><%= order.ordered_qty %></td>
            <td>$<%= long_price(order.order_total_amt) %></td>
            <td><%= order.seller.user_profile.fullname %></td>
        </tr>
        <% end %>
    </tbody>
</table>
