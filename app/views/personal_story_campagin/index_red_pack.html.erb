    <%= image_tag "bg-2.jpg", :class => "bg-img" %>
  </div>
  <header class="promo clearfix">
    <div class="sender-info">
      <div class="sender-avatar">
        <%= image_tag "yqj_icon_head.jpg" %>
      </div>
      <div style="text-align: center;color: #9f7533;">雪夜</div>
    </div>
    <div class="bubble">
