<style>
.img-avatar {
	background-color: rgb(255,249,233);
	border:2px solid rgb(197,169,77);
	border-radius:32px;
	width:64px;
	height:64px;
}

.img-friend-avatar {
	background-color: rgb(255,249,233);
	border:1px solid rgb(197,169,77);
	border-radius:24px;
	margin-right:3px;
	width:48px;
	height:48px;
}

.img-bubble {
	padding: 10px;
	font-size: 14px;
}

.digit-container {
	margin:0px auto;
	position:relative;
	width:275px;
	height:40px;
}

.digit-sub-container {
	float:left;
	width:64px;
	height:40px;
}

.digit-sub-margin-container {
	width:69px;
}

.digit-box {
	background:transparent url('/2016/digit_box.png') no-repeat center top;
	background-size:100% auto;
	color:#eee;
	float:left;
	font-size:24px;
	line-height:40px;
	text-align:center;
	width:32px;
	height:40px;
}

.digit-margin-box {
	margin-left:5px;
}

.digit-text-box {
	float:left;
	padding-left:5px;
	text-align:center;
	width:100%;
}

div.btn-text {
	bottom:-2%;
	position:absolute;
	text-align:center;
	width:100%;
}

@media (min-width: 640px) {
	.img-avatar {
		border-radius:54px;
		width:108px;
		height:108px;
	}
	
	.img-friend-avatar {
		border-radius:32px;
		margin-right:6px;
		width:64px;
		height:64px;
	}
	
	.img-bubble {
		font-size: 16px;
	}
}

@media (min-width: 480px) {
	.digit-container {
		width:290px;
	}
	
	.digit-sub-margin-container {
		width:74px;
	}
	
	.digit-margin-box {
		margin-left:10px;
	}
	
	.digit-text-box {
		padding-left:10px;
	}
}
</style>

<div style="color:#333; font-family:'Microsoft YaHei', '微软雅黑', arial, sans-serif; max-width:750px; margin:0px auto; padding:0px 0px 20px 0px;">
	<div style="margin-top:12%;">
			<table style="margin:0px auto;">
				<tr>
					<td style="padding-left:15px; text-align:center; vertical-align:top;">
						<% if @seller && @seller.user_profile %>
							<% if @seller.user_profile.picture && @seller.user_profile.picture!="" && @seller.user_profile.picture.to_s.gsub(' ','').length>0 %>
								<img src="<%= @seller.user_profile.picture %>" class="img-avatar img-rounded" />
							<% else %>
								<%= image_tag 'weixin_default.jpg', :class => "img-avatar img-rounded" %>
							<% end %>
							
							<div style="margin-top:3px;"><span style="color:#eee; font-size:14px;"><%= @seller.user_profile.fullname %></span></div>
            <%else%>
                <%= image_tag 'sunflowerlogo.jpg', :class => "img-avatar img-rounded" %>
                <div style="margin-top:3px;"><span style="color:#eee; font-size:14px;">太阳花</span></div>
						<% end %>
					</td>
					<td style="padding:0px 15px; vertical-align:top;">
				    <div class="img-bubble bubble" style="min-height:60px;">
				      <div class="promo-text">
								你的红包就可以<span style="color:#fa0000;"><%= @campaign.organizer_quote %></span>，谢谢支持！
							</div>
				    </div>
					</td>
				</tr>
			</table>
	</div>
	<div style="margin-top:15%; position:relative;" >
		<img src="/2016/red_pack.jpg" style="max-width:100%;">
		
		<div class="btn-text">
			<img src="/2016/collect_pack.png" style="max-width:50%;">
		</div>
	</div>
</div>

