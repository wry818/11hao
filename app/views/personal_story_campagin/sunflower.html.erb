                <div>
                  <%= image_tag 'sunflowerlogo.jpg', :class => "img-avatar img-rounded" %>


                  <div style="margin-top:3px;">
                    <span style="color:#eee; font-size:14px;">太阳花</span></div>
                </div>
            <% end %>
          </td>
