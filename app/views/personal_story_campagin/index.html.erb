<style>
.img-avatar {
	background-color: rgb(255,249,233);
	border:2px solid rgb(197,169,77);
	border-radius:32px;
	width:64px;
	height:64px;
}

.img-friend-avatar {
	background-color: rgb(255,249,233);
	border:1px solid rgb(197,169,77);
	border-radius:24px;
	margin-right:3px;
	width:48px;
	height:48px;
}

.img-bubble {
	max-width:90%;
	max-height:100px;
}

.digit-container {
	margin:0px auto;
	position:relative;
	width:275px;
	height:40px;
}

.digit-sub-container {
	float:left;
	width:64px;
	height:40px;
}

.digit-sub-margin-container {
	width:69px;
}

.digit-box {
	background:transparent url('/2016/digit_box.png') no-repeat center top;
	background-size:100% auto;
	color:#eee;
	float:left;
	font-size:24px;
	line-height:40px;
	text-align:center;
	width:32px;
	height:40px;
}

.digit-margin-box {
	margin-left:5px;
}

.digit-text-box {
	float:left;
	padding-left:5px;
	text-align:center;
	width:100%;
}

@media (min-width: 640px) {
	.img-avatar {
		border-radius:54px;
		width:108px;
		height:108px;
	}
	
	.img-friend-avatar {
		border-radius:32px;
		margin-right:6px;
		width:64px;
		height:64px;
	}
	
	.img-bubble {
		max-width:100%;
		max-height:150px;
	}
}

@media (min-width: 480px) {
	.digit-container {
		width:290px;
	}
	
	.digit-sub-margin-container {
		width:74px;
	}
	
	.digit-margin-box {
		margin-left:10px;
	}
	
	.digit-text-box {
		padding-left:10px;
	}
}
</style>

