<div class="header-box">
		<% if @seller %>
			<div class="row">
				<div class="col-md-12">
					<div style="padding:15px;">
						<% if @seller.user_profile.user.profile.picture.present? %>
						<%= cl_image_tag @seller.user_profile.user.profile.picture, width: 24, height: 24, crop: :limit %>
						&nbsp;&nbsp;&nbsp;
						<% end %>
						<span style="font-size:18px; vertical-align:top;"><%= @seller.user_profile.first_name %></span>
					</div>
				</div>
			</div>
			<% if @seller.video_file.present? %>
			<div class="row">
				<div class="col-md-12">
					<div style="margin-bottom:10px;">
						<embed src="/videos/<%= @seller.video_file %>" allowFullScreen="true" quality="high" width="100%" height="240" align="middle" allowScriptAccess="always" type="application/x-shockwave-flash"></embed>
					</div>
				</div>
			</div>
			<% end %>
		<% end %>
    <div class="row">
        <div class="col-md-12">
            <div style="position:relative">
				<% if @campaign.campaign_logo %>
				<div style="text-align:center;">
                    <%= cl_image_tag @campaign.campaign_logo.image_id, 
					transformation: [
						{
							width: @campaign.campaign_logo.crop_width, 
							height: @campaign.campaign_logo.crop_height,
							x: @campaign.campaign_logo.crop_x,
							y: @campaign.campaign_logo.crop_y,
							crop: :crop
						}
					], style: "width:100%; max-height:626px", class: 'campaign-logo'%>
				</div>
				<% else %>
					<div class="campaign-default-logo-box">
						<%= image_tag 'default_upload_logo.gif', class: 'img-responsive', style: "margin: auto;" %>
					</div>
				<% end %>
				<% if @seller %>
					<div class="seller-header-title-box">
						<table><tr>
							<td>
								<div class="campaign-header-logo-title">
									<span style="color: white">支持<%= @seller.user_profile.first_name %> 为<%= @campaign.title %>筹款</span>
								</div>
								<div class="campaign-header-organizer-quote">
									<span style="color: white"><%= @campaign.organizer_quote %></span>
								</div>
							</td>
						</tr></table>
					</div>
				<% else %>
					<div class="campaign-header-title-box"> 
						<div class="campaign-header-logo-title">
							<span style="color: white"><%= @campaign.title %></span>
						</div>
						<div class="campaign-header-organizer-quote">
							<span style="color: white"><%= @campaign.organizer_quote %></span>
						</div>
					</div>
				<% end %>
            </div>
        </div>
    </div>
</div>