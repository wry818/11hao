                  </div>

                  </form>
                  <div id="errors" style="display: none;"></div>

                </div>
                <!-- /.main -->
              </div>
              <!-- /.col-sm-7 -->

            </div>
            <!-- /.row -->
          </div>
          <!-- /.checkout-container -->

        </div>
      </div>
    </div>
  </div>
</div>

