<div id="campaign-show">
    <div id="campaign_slug" data-slug="<%= @campaign.slug %>"></div>

    <div class="container container-background">
        <div class="row">
            <div class="col-md-12">

                <div class="container-box checkout">
									
                    <div class="checkout-confirmation-container">

                        <div class="row checkout-confirmation-box">
                            <div class="col-sm-12">
                                <p>感谢您在11号公益圈购物，欢迎再次光临。</p>
																<hr/>
                            </div>
														
                            <div class="col-sm-12">
															<div style="background-color:rgb(255,250,244); border-top:4px solid transparent; border-bottom:4px solid transparent; margin:10px 0px 15px 0px; -moz-border-image:url(<%= image_url "envelope-border.png" %>) 4 0 4 0 round; -webkit-border-image:url(<%= image_url "envelope-border.png" %>) 4 0 4 0 round; -o-border-image:url(<%= image_url "envelope-border.png" %>) 4 0 4 0 round; border-image:url(<%= image_url "envelope-border.png" %>) 4 0 4 0 round; padding:15px 0px;">
																<div>&nbsp;&nbsp;
																	<span class="glyphicon glyphicon-user" style="color:rgb(191, 17, 26);"></span>&nbsp;
																	<span><%= @order.address_fullname %>
																	<span style="display:inline-block; width:60px;">&nbsp;</span>
																	<span class="glyphicon glyphicon-phone" style="color:rgb(191, 17, 26);"></span>&nbsp;
																	<span><%= mask_phone_number @order.phone_number %></span>
																</div>
																<div style="margin-top:10px; color:#888;">&nbsp;&nbsp;
																	<span><%= @order.address_city %></span>
																	<span><%= @order.address_city_area %></span>
																	<span><%= @order.address_line_one %></span>
																</div>
															</div>
															
                                <div class="well well-default confirmation_sidebar">
																	
                                    <h3 style="margin-top: 0px">订单明细</h3>
                                    <% unless @order.donation_only? %>
                                    <table style="width: 100%">
                                        <tbody style="vertical-align: top">
											<tr class="summary-header">
	                                            <th style="min-width:32px;">
	                                              <p>数量</p>
	                                            </th>
	                                            <th>
	                                              <p>商品</p>
	                                            </th>
	  										  <th>
	  											  <p>配送</p>
	  										  </th>
											</tr>
											
                                            <% @order.items.each do |item| %>
										        <tr style="vertical-align: top;">
										          <td>
										            <p style="margin: 10px 0 0 0;"><%= item.quantity %></p>
										          </td>
										          <td>
										            <p style="margin: 10px 0 0 0;"><%= item.product.name %></p>
										            <% item.options.each do |option| %>
													<% if option.value.present? %>
										                <p style="margin:0;"><i><%= "#{option.option_group.name}: #{option.value}" %></i></p>
													<% end %>
										            <% end %>
										          </td>
										          <td>
													<% delivery_method_text='<div style="text-align:left">' + item.delivery_method_text + '</div>' %>
													<%= image_tag item.delivery_method_icon, width:24, class:"show_tooltip_html", title: delivery_method_text, style:"display:inline-block; margin-top:10px;" %>
										          </td>
										        </tr>
                                            <% end %>
                                        </tbody>
                                    </table>
                                    <br/>
                                    <% end %>

									<p>
										<strong>支付金额:</strong><br/>
										￥<%= long_price(@order.grandtotal/100.0) %><br/><br/>
										<% if @order.seller %>
										<strong>支持的团队成员:</strong><br/>
										<%= @order.seller.user_profile.fullname %><br/><br/>
										<% end %>
										<strong>订单编号:</strong><br/> <%= @order.id.to_s.rjust(8,'0') %>
									</p>
                                </div>
                            </div>
                        </div>
												
												<div><h4>支持您感兴趣的公益活动</h4></div>
												
												<% Campaign.isnot_destroy.active.real.where("id>0").order(:title).each do |campaign| %>
												<hr/>
												<div class="row">
													<div class="col-xs-5">
														<div class="image-container">
								                            <%= cl_image_tag campaign.campaign_logo.image_id,
																transformation: [{ 
																		width: campaign.campaign_logo.crop_width,
																		height: campaign.campaign_logo.crop_height,
																		x: campaign.campaign_logo.crop_x,
																		y: campaign.campaign_logo.crop_y,
																		crop: :crop
																	}],
																style: 'width: 100%' if campaign.campaign_logo %>
									
									                        <%= image_tag 'crown.png', style: "display:block; margin: 25px auto; width:72px" if !campaign.campaign_logo %>
														</div>
													</div>
													<div class="col-xs-7">
														<div><%= campaign.title %></div>
														<div style="color:#888;"><%= campaign.organizer_quote %></div>
														<div style="margin-top:10px;">
															<span class="glyphicon glyphicon-heart-empty" style="color:rgb(241, 141, 55);"></span>&nbsp;&nbsp;共&nbsp;<span style="color:rgb(241, 141, 55);"><%= campaign.completed %></span>&nbsp;人支持&nbsp;&nbsp;&nbsp;<a href="<%= show_confirmation_path(campaign) %>" class="btn btn-orange">我要支持</a></div>
													</div>
												</div>
												<% end %>

                    </div><!-- /.checkout-confirmation-container -->

                </div>
            </div>
        </div>
				
    </div>
</div>

<script Language="javascript">
	
$(document).ready(function() {
	
	$("#footer_cart").hide();
									
});

</script>